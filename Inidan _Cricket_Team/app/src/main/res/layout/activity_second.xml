<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/black"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/black"
        android:text="Personal Information"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@android:color/black"
        app:srcCompat="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/name1"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@android:color/black"
            android:text="Name"
            android:textAlignment="viewStart"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/name"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:background="@android:color/black"
            android:text="name"
            android:textAlignment="viewStart"
            android:textColor="@android:color/white"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/dob1"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@android:color/black"
            android:text="Born"
            android:textAlignment="viewStart"
            android:textColor="@android:color/white"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/dob"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:background="@android:color/black"
            android:text="dob"
            android:textAlignment="viewStart"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/place1"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@android:color/black"
            android:text="Birth place"
            android:textAlignment="viewStart"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/place"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:background="@android:color/black"
            android:text="place"
            android:textAlignment="viewStart"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/role1"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@android:color/black"
            android:text="Role"
            android:textAlignment="viewStart"
            android:textColor="@android:color/white"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/role"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:background="@android:color/black"
            android:text="role"
            android:textAlignment="viewStart"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/batting_style1"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@android:color/black"
            android:text="Batting style"
            android:textAlignment="viewStart"
            android:textColor="@android:color/white"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/batting_style"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:background="@android:color/black"
            android:text="batting_style"
            android:textAlignment="viewStart"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/bowling_style1"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@android:color/black"
            android:text="Bowling style"
            android:textAlignment="viewStart"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/bowling_style"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:background="@android:color/black"
            android:text="bowling style"
            android:textAlignment="viewStart"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

    </LinearLayout>


    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|fill_vertical|center_horizontal"
        android:layout_marginTop="10dp"
        android:text="Web Info" />

</LinearLayout>